if [ -z "$MAVEN_SKIP_RC" ]; then
  [ -f /usr/local/etc/mavenrc ] && . /usr/local/etc/mavenrc
  [ -f /etc/mavenrc ] && . /etc/mavenrc
  [ -f "$HOME/.mavenrc" ] && . "$HOME/.mavenrc"
fi

cygwin=false
darwin=false
mingw=false
case "$(uname)" in
  CYGWIN*) cygwin=true ;;
  MINGW*) mingw=true ;;
  Darwin*)
    darwin=true
    if [ -z "$JAVA_HOME" ] && [ -x "/usr/libexec/java_home" ]; then
      JAVA_HOME="$(/usr/libexec/java_home)"
      export JAVA_HOME
    fi
    ;;
esac

if [ -z "$JAVA_HOME" ]; then
  javaExecutable="$(which javac 2>/dev/null)"
  if [ -n "$javaExecutable" ]; then
    javaHome="$(dirname "$(dirname "$(dirname "$javaExecutable")")")"
    [ -f "$javaHome/bin/java" ] && JAVA_HOME="$javaHome" && export JAVA_HOME
  fi
fi

if [ -z "$JAVACMD" ]; then
  if [ -n "$JAVA_HOME" ]; then
    JAVACMD="$JAVA_HOME/bin/java"
  else
    JAVACMD="$(command -v java)"
  fi
fi

if [ ! -x "$JAVACMD" ]; then
  echo "Error: JAVA_HOME is not set or java is not on PATH." >&2
  exit 1
fi

find_maven_basedir() {
  local wdir="$1"
  while [ "$wdir" != "/" ]; do
    [ -d "$wdir/.mvn" ] && echo "$wdir" && return
    wdir="$(cd "$wdir/.." 2>/dev/null && pwd)"
  done
  return 1
}

BASE_DIR=$(find_maven_basedir "$(cd "$(dirname "$0")" && pwd)")
[ -z "$BASE_DIR" ] && echo "Could not find .mvn directory." >&2 && exit 1
MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-$BASE_DIR}"
export MAVEN_PROJECTBASEDIR

wrapperJar="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar"
if [ ! -r "$wrapperJar" ]; then
  wrapperUrl=""
  [ -f "$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.properties" ] && \
    while IFS= read -r line; do
      case "$line" in wrapperUrl=*) wrapperUrl="${line#*=}"; break ;; esac
    done < "$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.properties"
  [ -z "$wrapperUrl" ] && wrapperUrl="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.2.0/maven-wrapper-3.2.0.jar"
  if command -v curl >/dev/null; then
    curl -sL -o "$wrapperJar" "$wrapperUrl" || { rm -f "$wrapperJar"; exit 1; }
  elif command -v wget >/dev/null; then
    wget -q -O "$wrapperJar" "$wrapperUrl" || { rm -f "$wrapperJar"; exit 1; }
  else
    echo "Need curl or wget to download Maven Wrapper jar." >&2
    exit 1
  fi
fi

exec "$JAVACMD" \
  ${MAVEN_OPTS:+-Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR"} \
  -classpath "$wrapperJar" \
  org.apache.maven.wrapper.MavenWrapperMain "$@"
